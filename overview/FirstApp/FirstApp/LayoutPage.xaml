<Window x:Class="FirstApp.LayoutPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstApp"
        mc:Ignorable="d"
        Title="LayoutPage" Height="450" Width="800">
    <DockPanel>
        <TextBox DockPanel.Dock="Top">Top</TextBox>
        <TextBox DockPanel.Dock="Bottom">Bottom</TextBox>
        <TextBox DockPanel.Dock="Left">Left</TextBox>
        <TextBlock Background="Aquamarine">Fill Remaining Space</TextBlock>
    </DockPanel>
</Window>
